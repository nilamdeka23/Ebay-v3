<!DOCTYPE html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.min.js"></script>
  <script src="angularjs/cal.js"></script>
</head>

<body ng-app="cal" ng-controller="calCtrl">

<div class="col-md-4 col-xs-3"></div>

<div class="col-md-4 col-xs-6" style="border: 1px solid #ddd;  background: #eee; margin-top: 50px; padding: 10px">
	
	
  <div class="alert alert-danger" ng-hide="divideByZero">
  	<strong>Warning!</strong> Divide by Zero Error.
  </div>

  <div id="calDisplay" class="row">{{calDisplay}}</div>

    <div class="row">
      <button type="button" class="btn btn-info btn-calc" ng-click="numPress(7)">7</button>
      <button type="button" class="btn btn-info btn-calc" ng-click="numPress(8)">8</button>
      <button type="button" class="btn btn-info btn-calc" ng-click="numPress(9)">9</button>
      <button type="button" class="btn btn-default btn-calc" ng-click="operation('/')">/</button>
    </div>

    <div class="row">
      <button type="button" class="btn btn-info btn-calc" ng-click="numPress(4)">4</button>
      <button type="button" class="btn btn-info btn-calc" ng-click="numPress(5)">5</button>
      <button type="button" class="btn btn-info btn-calc" ng-click="numPress(6)">6</button>
      <button type="button" class="btn btn-default btn-calc" ng-click="operation('*')">*</button>
    </div>

    <div class="row">
      <button type="button" class="btn btn-info btn-calc" ng-click="numPress(1)">1</button>
      <button type="button" class="btn btn-info btn-calc" ng-click="numPress(2)">2</button>
      <button type="button" class="btn btn-info btn-calc" ng-click="numPress(3)">3</button>
      <button type="button" class="btn btn-default btn-calc" ng-click="operation('-')">-</button>
    </div>

    <div class="row">
      <button type="button" class="btn btn-default btn-calc" ng-click="clearDisplay()">C</button>
      <button type="button" class="btn btn-info btn-calc" ng-click="numPress(0)">0</button>
      <button type="button" class="btn btn-default btn-calc" ng-click="operation('+')">+</button>
      <button type="button" class="btn btn-default btn-calc" ng-click="operation('=')">=</button>
    </div>

  </div>

<div class="col-md-4 col-xs-3"></div>

</body>

</html>
